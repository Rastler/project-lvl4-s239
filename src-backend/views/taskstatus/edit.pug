extends /layouts/application.pug

block content
  - const id = formObj.object['id'];
  - const name = formObj.object['name'];
  .container
    .pt-4.pb-5.text-center
      h2 Edit task status: #{name}
      hr

      .container.col-md-4
        +formFor(formObj, { url: urlFor('patchTaskStatus', id), method: 'patch' })
            +input(formObj, 'name', 'Name')
            +button('Save changes')
